


  <div href="#" class="list-group-item">
    
    <p class="list-group-item-text">
        <div class="review-raiting" data-score="<%= review.raiting %>"></div>
        <h5>Comment: <%= review.comment %> </h5>
        <% if user_signed_in? %>
            <% if review.user_id == current_user.id %>
                <%= link_to 'Edit', edit_book_review_path(review.book,review) ,class:"btn btn-warning"%>
                <%= link_to 'Delete', book_review_path(review.book,review),class:"btn btn-danger",method: :delete,data:{confirm: "Are you sure ?"}%>
            <% end %>
        <% end %>
    </p>

  </div>

