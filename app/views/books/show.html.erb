

<div class="row">
    <div class="col-md-4">
        <%= image_tag @book.book_img.url(:book_show) %>
    </div>
    <div class="col-md-8">
        <h2><%=@book.title%></h2>
        <h3><%=@book.author%></h3>
        <h3>Average raiting</h3>
        <div class="average-review-raiting" data-score="<%= @average_review %>"> </div>
        <span>Based on <%= @book.reviews.count %> reviews  </span>
        <h4><%= @book.category.name %></h4>
        <p><%=@book.description%></p>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
    <!--Where can put reviews-->
    <%= render @book.reviews %>
        <div>
            <%= link_to 'add review', new_book_review_path(@book) %>
        </div>
    </div>
</div>
<%= link_to "back" ,root_path ,class: "btn btn-primary"%>
<% if current_user.id == @book.user_id %>
    <%= link_to 'Edit' ,edit_book_path(@book) ,class:"btn btn-warning"%>
    <%= link_to "Delete" ,book_path(@book) ,method: :delete,data:{confirm: "Are you sure ?"},class:"btn btn-danger"%>
<% end %>

<script>
    $(".review-raiting").raty({
        readOnly:true,
        score:function(){
            return $(this).attr("data-score");
        },
        path:"/assets/"
    })

    
        $(".average-review-raiting").raty({
        readOnly:true,
        score:function(){
            return $(this).attr("data-score");
        },
        path:"/assets/"
    })
</script>