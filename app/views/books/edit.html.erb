
<div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
    <div class="panel-heading"><h2>Edit Book</h2></div>
    <div class="panel-body">
       <%= simple_form_for @book,:html=>{:multipart=>true} do |f| %>
            <%= f.select :category_id, @categories %>
            <%= f.file_field :book_img %>
            <%= f.input :title ,label: "Title",class:"form-control"%>
            <%= f.input :description ,class:"form-control"%>
            <%= f.input :author ,class:"form-control"%>
            <%= f.button :submit ,class:"btn-primary"%>
        <% end %>
   
    </div>
      <div class="panel-footer"> <%= link_to "back" ,root_path ,class:"btn btn-info"%></div>
    </div>
</div>