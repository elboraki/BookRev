<h1>List Books</h1>
<h5><%=params[:category]%></h5>
<% if @books.count== 0 %>
        <div class="alert alert-dismissible alert-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <h6>There are no books currently in this category.</h6>
    </div>
<% else %>
        <div class="row">
            <% @books.each do |book| %>
                <div class="col-md-4">
                <div class="panel panel-default" style="width:233px;">
                <div class="panel-body">
                     <a href="/books/<%= book.id%>">
                        <%= image_tag book.book_img.url(:book_index) %>
                    </a>
                </div>
                </div>
                  
                </div>
            <% end %>
        </div>
<% end %>

<%= link_to "New book",new_book_path ,class:"btn btn-success" %>
